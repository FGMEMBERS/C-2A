<?xml version="1.0"?>

<PropertyList>

 <path>propellerR.ac</path>
 
 <animation>
   <name>helice</name>
   <object-name>pal1</object-name>   
   <object-name>pal2</object-name>   
   <object-name>pal3</object-name>   
   <object-name>pal4</object-name>   
   <object-name>bol</object-name>   
   <object-name>propdisc</object-name>
   <object-name>propblur</object-name>
 </animation>   

 <!-- Mise en place des pales par défaut -->
 <animation>
   <type>select</type>
   <object-name>pal1</object-name>
   <object-name>pal2</object-name>   
   <object-name>pal3</object-name>
   <object-name>pal4</object-name>
   <condition>
     <less-than>
       <property>/engines/engine[0]/rpm</property>
       <value>1000</value>
     </less-than>
   </condition>
 </animation>

 <animation>
   <type>rotate</type>
   <object-name>pal1</object-name>
   <property>/controls/engines/engine[0]/propeller-pitch</property>
   <factor> 62.0 </factor>
   <center>
     <x-m> 0.0 </x-m>
     <y-m> 0.0 </y-m>
     <z-m> 0.0 </z-m>
   </center>
   <axis>
     <x>  0.0 </x>
     <y>  0.0 </y>
     <z> -1.0 </z>
   </axis>
 </animation>

 <animation>
   <type>rotate</type>
   <object-name>pal2</object-name>
   <property>/controls/engines/engine[0]/propeller-pitch</property>
   <factor> 62.0 </factor>
   <center>
     <x-m> 0.0 </x-m>
     <y-m> 0.0 </y-m>
     <z-m> 0.0 </z-m>
   </center>
   <axis>
     <x>  0.0 </x>
     <y>  1.0 </y>
     <z>  0.0 </z>
   </axis>
 </animation>

 <animation>
   <type>rotate</type>
   <object-name>pal3</object-name>
   <property>/controls/engines/engine[0]/propeller-pitch</property>
   <factor> 62.0 </factor>
   <center>
     <x-m> 0.0 </x-m>
     <y-m> 0.0 </y-m>
     <z-m> 0.0 </z-m>
   </center>
   <axis>
     <x>  0.0 </x>
     <y>  0.0 </y>
     <z>  1.0 </z>
   </axis>
 </animation>
 
  <animation>
   <type>rotate</type>
   <object-name>pal4</object-name>
   <property>/controls/engines/engine[0]/propeller-pitch</property>
   <factor> 62.0 </factor>
   <center>
     <x-m> 0.0 </x-m>
     <y-m> 0.0 </y-m>
     <z-m> 0.0 </z-m>
   </center>
   <axis>
     <x>  0.0 </x>
     <y> -1.0 </y>
     <z>  0.0 </z>
   </axis>
 </animation>

<!-- Sélection Pales/disque en fonction de "RPM" -->
 <animation>
   <type>select</type>
   <object-name>propdisc</object-name>
   <condition>
     <greater-than>
       <property>/engines/engine[0]/rpm</property>
       <value>1000</value>
     </greater-than>
   </condition>
 </animation>

 <animation>
   <type>select</type>
   <object-name>propblur</object-name>
   <condition>
   <and>
     <greater-than>
       <property>/engines/engine[0]/rpm</property>
       <value>400.000</value>
     </greater-than>
     <less-than>
       <property>/engines/engine[0]/rpm</property>
       <value>1000.001</value>
     </less-than>
   </and>
   </condition>
 </animation>

<!-- Rotation de l'hélice -->
 <animation>
   <type>spin</type>
   <object-name>helice</object-name>
   <property>/engines/engine[0]/rpm</property>
   <factor> -0.479 </factor>
   <center>
     <x-m> 0.0 </x-m>
     <y-m> 0.0 </y-m>
     <z-m> 0.0 </z-m>
   </center>
   <axis>
     <x> 1.0 </x>
     <y> 0.0 </y>
     <z> 0.0 </z>
   </axis>
 </animation>

</PropertyList>
