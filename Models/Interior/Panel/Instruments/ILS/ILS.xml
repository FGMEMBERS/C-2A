<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

 <path>ILS.ac</path>

  <animation>
    <object-name>RMI.bezel</object-name>
    <object-name>screw</object-name>
    <object-name>ILS.face</object-name>
    <object-name>ILS.face2</object-name>
    <object-name>Hor.dev</object-name>
    <object-name>Vert.dev</object-name>
    <object-name>IndicTOFROM</object-name>
    <object-name>Flag-GS</object-name>
    <object-name>Flag-HDG</object-name>

    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
    <object-name>vitre</object-name>
  </animation>

  <!-- Night Light -->
  <animation>
    <type>material</type>
    <object-name>ILS.face</object-name>
    <object-name>ILS.face2</object-name>
    <object-name>Flag-HDG</object-name>
		<object-name>Flag-GS</object-name>
		<object-name>Hor.dev</object-name>
		<object-name>Vert.dev</object-name>
    <emission>
      <red>   0.035 </red>
      <green> 0.012 </green>
      <blue>  0.007 </blue>
      <factor-prop>/systems/electrical/outputs/instrument-lights</factor-prop>
    </emission>
  </animation>
  <!-- End night light -->

  <animation>
    <type>rotate</type>
    <object-name>ILS.face</object-name>
    <property>/instrumentation/nav[0]/radials/target-radial-deg</property>
    <center>
      <x> 0 </x>
      <y> 0 </y>
			<z> 0 </z>
    </center>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

	<animation>
    <type>select</type>
    <object-name>Flag-HDG</object-name>
    <condition>
			<!-- <and> -->
        <equals>
          <property>instrumentation/nav[0]/in-range</property>
          <value>false</value>
        </equals>
			<!-- </and> -->
    </condition>
 	</animation>

	<animation>
		<type>select</type>
		<object-name>Flag-GS</object-name>
		<condition>
			<or>
				<equals>
					<property>instrumentation/nav[0]/in-range</property>
					<value>false</value>
				</equals>
				<equals>
					<property>instrumentation/nav[0]/has-gs</property>
					<value>false</value>
				</equals>
			</or>
		</condition>
 	</animation>

	<animation>
		<type>translate</type>
		<object-name>Vert.dev</object-name>
		<property>instrumentation/nav[0]/gs-needle-deflection</property>
		<interpolation>
			<entry><ind> -10 </ind><dep> -0.02 </dep></entry>
			<entry><ind>   0 </ind><dep>  0.00 </dep></entry>
			<entry><ind>  10 </ind><dep>  0.02 </dep></entry>
		</interpolation>
		<axis>
			<x> 0 </x>
			<y> 0 </y>
			<z> 1 </z>
		</axis>
 	</animation>

	<animation>
		<type>translate</type>
		<object-name>Hor.dev</object-name>
		<property>instrumentation/nav[0]/heading-needle-deflection</property>
		<interpolation>
			<entry><ind> -10 </ind><dep> -0.02 </dep></entry>
			<entry><ind>   0 </ind><dep>  0.00 </dep></entry>
			<entry><ind>  10 </ind><dep>  0.02 </dep></entry>
		</interpolation>
		<axis>
			<x> 0 </x>
			<y> 1 </y>
			<z> 0 </z>
		</axis>
	</animation>

	<animation>
		<type>rotate</type>
		<object-name>IndicTOFROM</object-name>
		<property>/instrumentation/heading-indicator/fromto-pointer</property>
		<center>
			<x-m> 0 </x-m>
			<y-m> 0 </y-m>
			<z-m> 0 </z-m>
		</center>
		<axis>
			<x> 1 </x>
			<y> 0 </y>
			<z> 0 </z>
		</axis>
	</animation>

