<?xml version="1.0" encoding="UTF-8"?>

<!-- KI-229 RMI -->
<PropertyList>

  <path>rmi.ac</path>

  <animation>
    <object-name>RMI</object-name>
    <object-name>RMI.face</object-name>
    <object-name>RMI.ticks</object-name>
    <object-name>knob</object-name>
    <object-name>RMI-bug</object-name>
    <object-name>RMI.adf</object-name>
    <object-name>RMI.brgTAC</object-name>
    <object-name>RMI.brgN2</object-name>
    <object-name>RMI.brgN1</object-name>
    <object-name>switchbox</object-name>
    <object-name>NAV1BUTT</object-name>
    <object-name>NAV2BUTT</object-name>
    <object-name>TACBUTT</object-name>
    <object-name>V1on</object-name>
    <object-name>V2on</object-name>
    <object-name>TACon</object-name>

    <object-name>Bugminus</object-name>
    <object-name>Bugplus</object-name>

    <object-name>vitre</object-name>
  </animation>
	
  <animation>
    <type>noshadow</type>
    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>material</type>
    <object-name>RMI.face</object-name>
    <object-name>RMI.ticks</object-name>
    <object-name>RMI.adf</object-name>
    <object-name>RMI.brgN1</object-name>
    <object-name>RMI.brgN2</object-name>
    <object-name>RMI.brgTAC</object-name>
    <object-name>RMI-bug</object-name>
    <object-name>NAV1BUTT</object-name>
    <object-name>NAV2BUTT</object-name>
    <object-name>TACBUTT</object-name>
    <object-name>V1on</object-name>
    <object-name>V2on</object-name>
    <object-name>TACon</object-name>
    <emission>
      <red>   0.035 </red>
      <green> 0.012 </green>
      <blue>  0.007 </blue>
      <factor-prop>/systems/electrical/outputs/instrument-lights</factor-prop>
    </emission>
  </animation>
	
  <animation>
    <type>select</type>
    <object-name>V1on</object-name>
    <object-name>RMI.brgN1</object-name>
    <condition>
      <property>/controls/armament/station[5]/release-all</property>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>V2on</object-name>
    <object-name>RMI.brgN2</object-name>
    <condition>
      <property>/controls/armament/station[6]/release-all</property>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>TACon</object-name>
    <object-name>RMI.brgTAC</object-name>
    <condition>
      <property>/controls/armament/station[7]/release-all</property>
    </condition>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>RMI.face</object-name>
    <property>instrumentation/heading-indicator/indicated-heading-deg</property>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>RMI.adf</object-name>
    <property>instrumentation/adf/indicated-bearing-deg</property>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>RMI.brgN1</object-name>
    <property>orientation/heading-deg</property>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>
	
  <animation>
    <type>rotate</type>
    <object-name>RMI.brgN1</object-name>
    <property>instrumentation/nav[0]/heading-deg</property>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>RMI.brgN2</object-name>
    <property>orientation/heading-deg</property>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>
	
  <animation>
    <type>rotate</type>
    <object-name>RMI.brgN2</object-name>
    <property>instrumentation/nav[1]/heading-deg</property>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>
	
  <animation>
    <type>rotate</type>
    <object-name>RMI.brgTAC</object-name>
    <property>orientation/heading-deg</property>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>
	
  <animation>
    <type>rotate</type>
    <object-name>RMI.brgTAC</object-name>
    <property>instrumentation/tacan/indicated-bearing-true-deg</property>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <!-- Heading bug dial -->
  <animation>
    <type>rotate</type>
    <object-name>RMI-bug</object-name>
    <property>/instrumentation/heading-indicator/indicated-heading-deg</property>
    <factor>-1</factor>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>RMI-bug</object-name>
    <property>/autopilot/settings/heading-bug-deg</property>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <!-- Heading Bug control -->
  <animation>
    <type>pick</type>
    <object-name>Bugminus</object-name>
    <visible>false</visible>
    <action>
      <name>small decrease</name>
      <button>0</button>
      <repeatable>true</repeatable>
      <binding>
        <command>property-adjust</command>
        <property>/autopilot/settings/heading-bug-deg</property>
        <step>-1</step>
        <min>0</min>
        <max>360</max>
        <wrap>1</wrap>
      </binding>
    </action>
    <action>
      <name>large decrease</name>
      <button>1</button>
      <repeatable>true</repeatable>
      <binding>
        <command>property-adjust</command>
        <property>/autopilot/settings/heading-bug-deg</property>
        <step>-5</step>
        <min>0</min>
        <max>360</max>
        <wrap>1</wrap>
      </binding>
    </action>
  </animation>   

  <animation>
    <type>pick</type>
    <object-name>Bugplus</object-name>
    <visible>false</visible>
    <action>
      <name>small increase</name>
      <button>0</button>
      <repeatable>true</repeatable>
      <binding>
        <command>property-adjust</command>
        <property>/autopilot/settings/heading-bug-deg</property>
        <step>1</step>
        <min>0</min>
        <max>360</max>
        <wrap>1</wrap>
      </binding>
    </action>
    <action>
      <name>large increase</name>
      <button>1</button>
      <repeatable>true</repeatable>
      <binding>
        <command>property-adjust</command>
        <property>/autopilot/settings/heading-bug-deg</property>
        <step>5</step>
        <min>0</min>
        <max>360</max>
        <wrap>1</wrap>
      </binding>
    </action>
  </animation>
 
  <!-- NAV1 Button connect the NAV gauge to Nav1 
  /controls/armament/station[5]/release-all = false/true
  /controls/armament/station[6]/release-all = false/true
  /controls/armament/station[7]/release-all = false/true
  -->  
  <animation>
    <type>pick</type>
    <object-name>NAV1BUTT</object-name>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>property-assign</command>
        <!-- NAV1 on-->
        <property>/controls/armament/station[5]/release-all</property>
        <value type="bool">true</value>
      </binding>
      <binding>
        <command>property-assign</command>
        <!-- NAV2 off-->
        <property>/controls/armament/station[6]/release-all</property>
        <value type="bool">false</value>value
      </binding>
      <binding>
        <command>property-assign</command>
        <!-- TACAN off-->
        <property>/controls/armament/station[7]/release-all</property>
        <value type="bool">false</value>
      </binding>
    </action>
  </animation> 

  <animation>
    <type>pick</type>
    <object-name>NAV2BUTT</object-name>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>property-assign</command>
        <!-- NAV1 off -->
        <property>/controls/armament/station[5]/release-all</property>
        <value type="bool">false</value>
      </binding>
      <binding>
        <command>property-assign</command>
        <!-- NAV2 on-->
        <property>/controls/armament/station[6]/release-all</property>
        <value type="bool">true</value>
      </binding>
      <binding>
        <command>property-assign</command>
        <!-- TACAN off-->
        <property>/controls/armament/station[7]/release-all</property>
        <value type="bool">false</value>
      </binding>
    </action>
  </animation> 

  <animation>
    <type>pick</type>
    <object-name>TACBUTT</object-name>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>property-assign</command>
        <!-- NAV1 off -->
        <property>/controls/armament/station[5]/release-all</property>
        <value type="bool">false</value>
      </binding>
      <binding>
        <command>property-assign</command>
        <!-- NAV2 off-->
        <property>/controls/armament/station[6]/release-all</property>
        <value type="bool">false</value>
      </binding>
      <binding>
        <command>property-assign</command>
        <!-- TACAN on -->
        <property>/controls/armament/station[7]/release-all</property>
        <value type="bool">true</value>
      </binding>
    </action>
  </animation>

</PropertyList>

