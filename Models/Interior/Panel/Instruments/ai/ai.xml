<?xml version="1.0" encoding="ISO-8859-1"?>

<!-- Attitude/Turn Indicator -->
<PropertyList>

  <path>ai.ac</path>

  <animation>
    <object-name>contour</object-name>
    <object-name>visses</object-name>
    <object-name>AttitudeBall</object-name>
    <object-name>barre</object-name>
    <object-name>barre1</object-name>
    <object-name>barre2</object-name>
    <object-name>SkyPointer</object-name>
    <object-name>FaceTurn</object-name>
    <object-name>BallTurn</object-name>
    <object-name>sur</object-name>

    <object-name>vitre</object-name>
  </animation>

  <!-- working for Rembrandt -->
  <effect>
    <inherits-from>Aircraft/C-2A/Models/Effects/glass/glass</inherits-from>
    <object-name>vitre</object-name>
  </effect>
  
  <animation>
    <type>material</type>
    <object-name>AttitudeBall</object-name>
    <object-name>SkyPointer</object-name>
    <object-name>BallTurn</object-name>
    <object-name>FaceTurn</object-name>
    <emission>
      <factor-prop>systems/electrical/outputs/instrument-lights</factor-prop>
      <red>   0.50 </red>
      <green> 0.25 </green>
      <blue>  0.25 </blue>
    </emission> 
  </animation>    

  <animation>
    <type>rotate</type>
    <object-name>AttitudeBall</object-name>
    <property>orientation/roll-deg</property>
    <factor> 1 </factor>
    <center>
      <x-m>-0.030 </x-m>
      <y-m> 0.000 </y-m>
      <z-m> 0.000 </z-m>
    </center>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>  

  <animation>
    <type>rotate</type>
    <object-name>AttitudeBall</object-name>
    <property>orientation/pitch-deg</property>
    <factor> 1 </factor>
    <center>
      <x-m> -0.030 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.000 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>  

  <animation>
    <type>rotate</type>
    <object-name>SkyPointer</object-name>
    <property>orientation/roll-deg</property>
    <factor> 1 </factor>
    <center>
      <x-m> 0.019 </x-m>
      <y-m> 0.000 </y-m>
      <z-m> 0.000 </z-m>
    </center>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>
 
  <animation>
    <type>rotate</type>
    <object-name>BallTurn</object-name>
    <property>/instrumentation/slip-skid-ball/indicated-slip-skid</property>
    <interpolation>
      <entry><ind> -1.1 </ind><dep> -22 </dep></entry>
      <entry><ind>  1.1 </ind><dep>  22 </dep></entry>
    </interpolation>
    <center>
      <x-m> 0.001 </x-m>
      <y-m> 0.000 </y-m>
      <z-m> 0.006 </z-m>
    </center>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

</PropertyList>
