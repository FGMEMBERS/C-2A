<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList include="Systems/c-2a-base.xml">

  <sim>

    <description>Grumman C 2A (YASim)</description>
    <author>BARANGER Emmanuel (3D/FDM) / Paolo ROTA (Panel)</author>

    <flight-model>yasim</flight-model>
    <aero>Systems/c-2a-yasim</aero>
    
    <rating>
      <FDM type="int">     2 </FDM>
      <systems type="int"> 2 </systems>
      <cockpit type="int"> 2 </cockpit>
      <model type="int">   4 </model>
    </rating>

    <tags>
      <tag>cargo</tag>
      <tag>1960s</tag>
      <tag>1970s</tag>
      <tag>1980s</tag>
      <tag>1990s</tag>
      <tag>grumman</tag>
      <tag>gulfwar1</tag>
      <tag>high-wing</tag>
      <tag>retractable-gear</tag>
      <tag>h-tail</tag>
      <tag>ifr</tag>
      <tag>tail-hook</tag>
      <tag>wing-fold</tag>
      <tag>turboprop</tag>
      <tag>twin-engine</tag>
    </tags>

    <startup>
      <splash-texture>Aircraft/C-2A/Splashs/c-2a-splash.png</splash-texture>
    </startup>

    <previews>
      <preview>
	<type>exterior</type>
	<splash type="bool">true</splash>
	<path>Splashs/c2a-exterior.jpg</path>
      </preview>
      <preview>
	<type>panel</type>
	<splash type="bool">false</splash>
	<path>Splashs/c2a-interior.jpg</path>
      </preview>
    </previews>
    
    <model>
      <path>Aircraft/C-2A/Models/c-2a.xml</path>
      <fallback-model-index type="int">551</fallback-model-index>
      <livery>
        <file type="string">default</file>
      </livery>
    </model>
    
    <help include="Systems/help.xml"/>
    
  </sim>

</PropertyList>
