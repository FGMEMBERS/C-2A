<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <sim include="views.xml">
 
    <fuel-fraction>0.8</fuel-fraction>
  
    <sound>
      <path>Aircraft/C-2A/Sounds/c-2a-sound.xml</path>
    </sound>

    <multiplay>
      <chat_display>1</chat_display>
      <generic> 
        <int   n="0"  type="int">  0 </int>                                        <!-- 0 immat -->
        <int   n="1"  type="int">  0 </int>                                        <!-- 1 immat -->
        <int   n="2"  type="int">  0 </int>                                        <!-- 2 immat -->
        <int   n="3"  type="int">  0 </int>                                        <!-- 3 immat -->
        <int   n="4"  type="int">  0 </int>                                        <!-- 4 immat -->
        <int   n="5"  type="int">  0 </int>                                        <!-- 5 immat -->
        <int   n="6"  type="bool"> 1 </int>                                        <!-- 6 smoke/bomb/torpedo -->
        <int   n="7"  type="bool" alias="/controls/switches/landing-light">0</int> <!-- 7 Landing light -->
        <int   n="8"  alias="/systems/electrical/outputs/nav-lights">  0 </int>    <!-- 8 nav-lights -->
        <int   n="9"  alias="/sim/model/lights/beacon/state">  false </int>        <!-- 9 strobe-lights -->
        <int   n="10" alias="/controls/electric/key-pos">  0 </int>                <!-- 10 key position -->
        <int   n="11" type="bool" alias="/model/show-yoke"> 1 </int>               <!-- 11 Show yokes -->
        <float n="0"  alias="/sim/model/door-positions/crew/position-norm"/>
        <float n="1"  alias="/sim/model/door-positions/passenger/position-norm"/>
        <float n="2"  alias="/position/gear-agl-m"> 0 </float>                     <!-- altitude for MP shadow -->
        <float n="3"  alias="/position/altitude-ft"> 0 </float>                    <!-- altitude for Smoke/Trail -->
        <float n="4"  alias="/sim/model/door-positions/wings/position-norm"/>
        <float n="6"  alias="/engines/engine[0]/n1"/>
        <float n="7"  alias="/engines/engine[0]/n2"/>
        <float n="8"  alias="/engines/engine[1]/n1"/>
        <float n="9"  alias="/engines/engine[1]/n2"/>
        <float n="10" alias="/gear/gear[0]/wow/"/>
        <float n="11" alias="/gear/gear[1]/wow/"/>
        <float n="12" alias="/gear/gear[2]/wow/"/>
        <float n="13" alias="/gear/gear[0]/rollspeed-ms"/>
        <float n="14" alias="/gear/gear[1]/rollspeed-ms"/>
        <float n="15" alias="/gear/gear[2]/rollspeed-ms"/>
        <!-- For Bombable -->
        <int type="int" n="10" alias="controls/armament/trigger">0</int>
        <string n="9" type="string" />
      </generic>
    </multiplay>
    
    <menubar include="../Dialogs/c-2a-menu.xml"/>

  </sim>

  <input include="c-2a-keyboard.xml"/>
  
  <surface-positions include="surface-positions.xml"/>

  <controls include="controls.xml"/>
  
  <nasal>
    <doors>
      <file>Aircraft/C-2A/Nasal/doors.nas</file>
    </doors>
    <c2a>
      <file>Aircraft/C-2A/Nasal/liveries.nas</file>
      <file>Aircraft/C-2A/Nasal/immat.nas</file>
      <file>Aircraft/C-2A/Nasal/light.nas</file>
    </c2a>
  </nasal>

</PropertyList>
